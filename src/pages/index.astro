---
import Layout from "~/layouts/Layout.astro";
import Section from "~/components/Section.astro";
import Hero from "~/components/Hero.astro";
import { Picture, Image } from "astro:assets";
import Button from "~/components/Button.astro";
import ButtonCallUs from "~/components/ButtonCallUs.astro";
import Grid from "~/components/Grid.astro";
import Heading from "~/components/Heading.astro";
import WideImage from "~/components/WideImage.astro";
import ReviewSlider from "~/components/ReviewSlider.astro";

// Images
import PheasantDrawing from "~/assets/images/facan_rajz_round.png";
import Pheasant from "~/assets/images/facan_round.png";
import NightHunt from "~/assets/images/night_round.png";
import RoeDeer from "~/assets/images/oz_round.png";
import Hog from "~/assets/images/rofi_round.png";
import DecorativeImage from "~/assets/images/antlers.avif";
import VibeImage from "~/assets/images/istockphoto-1301911854-1024x1024.jpg";
import reviewAuthors from "~/assets/images/review-authors.png";
import Dessert from "~/assets/images/dessert.png";
import Mussels from "~/assets/images/mussels2.png";
import PizzaHero from "~/assets/images/pizza-hero.png";
---

<Layout title="Home" pageTitle="Home" description="Welcome to our restaurant!">
	<Section class:list={"bg-white"}>
		<Hero>
			<div slot="hero-content-left" class="prose max-w-none max-lg:order-1">
				<h1 class="font-tangerine">Üdvözöljük a Toronykakas Vadásztársaság oldalán!</h1>

				<p>
					Szenvedélyünk a vadászat, elkötelezettségünk a természet iránti tisztelet.
					Csatlakozzon hozzánk közös vadászatokra, fedezze fel programjainkat, és legyen része közösségünknek!
				</p>

				<div class="mt-8 flex items-center gap-x-8">
					<Button url="/offers">Ajánlataink</Button>
					<ButtonCallUs />
				</div>
			</div>
			<div slot="hero-content-right">
				<Picture
					class:list={"mx-auto"}
					src={VibeImage}
					height={600}
					formats={["avif", "webp"]}
					alt="A description of my image."
					loading={"eager"}
					fetchpriority={"high"}
				/>
			</div>
		</Hero>
	</Section>

	<WideImage image={DecorativeImage} alt="Just an image" class:list={"aspect-video lg:aspect-[16/6]"} />

	<Section class:list={"bg-white"}>
		<Heading>
			<h2 slot="heading-title" class="font-tangerine h2">Vadászati opciók</h2>
			<p slot="heading-content">
				Explore our selection of authentic Italian dishes, from classic pizzas to homemade pastas.
			</p>
		</Heading>

		<Grid>
			<div slot="grid-content-1">
				<div class="flex flex-col items-center prose text-center">
					<Picture
						class:list={"not-prose w-full h-auto"}
						src={RoeDeer}
						formats={["avif", "webp"]}
						alt="A description of my image."
					/>
					<h3 class="h4 mt-0 font-black">Őz vadászat</h3>
					<p>
						Pasta is a staple of Italian cuisine, with a rich history dating back centuries. It comes in
						various shapes and sizes, each suited to different sauces and preparations.
					</p>
				</div>
			</div>

			<div slot="grid-content-2">
				<div class="flex flex-col items-center prose text-center">
					<Picture
						class:list={"not-prose w-full h-auto"}
						src={Pheasant}
						formats={["avif", "webp"]}
						alt="A description of my image."
					/>
					<h3 class="h4 mt-0 font-black">Társas apróvad vadászat</h3>
					<p>
						Pasta is a staple of Italian cuisine, with a rich history dating back centuries. It comes in
						various shapes and sizes, each suited to different sauces and preparations.
					</p>
				</div>
			</div>

			<div slot="grid-content-3">
				<div class="flex flex-col items-center prose text-center">
					<Picture
						class:list={"not-prose w-full h-auto"}
						src={NightHunt}
						formats={["avif", "webp"]}
						alt="A description of my image."
					/>
					<h3 class="h4 mt-0 font-black">Vadkár megelőzés</h3>
					<p>
						Pasta is a staple of Italian cuisine, with a rich history dating back centuries. It comes in
						various shapes and sizes, each suited to different sauces and preparations.
					</p>
				</div>
			</div>
		</Grid>
	</Section>




